# ─────────────────────────────────────────────────
# HadithiAI Live — Environment Variables
# Copy to .env and fill in your values
# ─────────────────────────────────────────────────

# ── Google Cloud ──
HADITHI_PROJECT_ID=your-gcp-project-id
HADITHI_REGION=us-central1

# ── Gemini ──
HADITHI_GEMINI_MODEL=gemini-2.0-flash-live
HADITHI_GEMINI_TEXT_MODEL=gemini-2.0-flash
HADITHI_GEMINI_POOL_SIZE=3
# HADITHI_GEMINI_API_KEY=          # Optional: if using API key instead of ADC

# ── Vertex AI ──
HADITHI_IMAGEN_MODEL=imagen-3.0-generate-002

# ── Firestore ──
HADITHI_FIRESTORE_DATABASE=(default)
HADITHI_SESSION_TTL_HOURS=24

# ── Cloud Storage ──
HADITHI_MEDIA_BUCKET=hadithiai-media

# ── Application ──
HADITHI_DEBUG=true
HADITHI_LOG_LEVEL=DEBUG

# ── Streaming Tuning ──
HADITHI_AUDIO_CHUNK_DURATION_MS=100
HADITHI_STREAM_BUFFER_HIGH_WATERMARK=50
HADITHI_STREAM_BUFFER_LOW_WATERMARK=10
HADITHI_AGENT_TIMEOUT_SECONDS=5.0

# ── Cultural Grounding ──
HADITHI_CULTURAL_CONFIDENCE_THRESHOLD=0.7
HADITHI_CULTURAL_REJECT_THRESHOLD=0.4
